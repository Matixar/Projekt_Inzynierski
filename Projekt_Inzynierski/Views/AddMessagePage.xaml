<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projekt_Inzynierski.Views.AddMessagePage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Wiadomość:"/>
            <Editor Text="{Binding Message}" AutoSize="TextChanges" />
            <Button Text="Dodaj wiadomość" Command="{Binding AddMessageCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>